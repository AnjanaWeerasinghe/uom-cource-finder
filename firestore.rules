rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to get user's role from users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Courses: everyone reads, admins and teachers can write
    match /courses/{courseId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn() && (getUserRole() == "admin" || getUserRole() == "teacher");
    }

    // Users collection
    match /users/{userId} {
      // Users can read/write only their own profile
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Admins can read ALL users (for user management)
      allow read: if isSignedIn() && getUserRole() == "admin";
      
      // Admins can update any user's role
      allow update: if isSignedIn() && getUserRole() == "admin";
    }

    // Global enrollments: ONLY admins can read all, users can write their own
    match /enrollments/{enrollId} {
      allow read: if isSignedIn() && getUserRole() == "admin";
      allow write: if isSignedIn(); // any logged in user can enroll
    }

    // User-side enrollments: users can read/write their own
    match /users/{userId}/enrollments/{enrollId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Course Works collection (for teacher assignments)
    match /courseWorks/{workId} {
      allow read: if isSignedIn(); // all users can read coursework
      allow create, update, delete: if isSignedIn() && (getUserRole() == "teacher" || getUserRole() == "admin");
    }

    // Submissions collection (for student work submissions)
    match /submissions/{submissionId} {
      allow read: if isSignedIn(); // all users can read submissions
      allow create, update, delete: if isSignedIn(); // all users can submit/grade work
    }

    // Works collection (alternative name for coursework)
    match /works/{workId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn() && (getUserRole() == "teacher" || getUserRole() == "admin");
    }
  }
}
